<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0f1923">

  <title>
    {%- if page_title == blank -%}{{ shop.name }}
    {%- elsif template.name == 'index' -%}{{ shop.name }} — {{ shop.description }}
    {%- else -%}{{ page_title }} — {{ shop.name }}
    {%- endif -%}
  </title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ 'component-badge.css' | asset_url | stylesheet_tag }}

  {%- if template.name == 'index' -%}
    {{ 'section-hero.css' | asset_url | stylesheet_tag }}
    {{ 'section-loyalty-banner.css' | asset_url | stylesheet_tag }}
    {{ 'section-value-props.css' | asset_url | stylesheet_tag }}
    {{ 'section-product-grid.css' | asset_url | stylesheet_tag }}
    {{ 'component-product-card.css' | asset_url | stylesheet_tag }}
    {{ 'component-research-panel.css' | asset_url | stylesheet_tag }}
    {{ 'section-product-request.css' | asset_url | stylesheet_tag }}
    {{ 'section-how-it-works.css' | asset_url | stylesheet_tag }}
    {{ 'section-features.css' | asset_url | stylesheet_tag }}
    {{ 'section-cta-banner.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- if template.name == 'product' -%}
    {{ 'template-product.css' | asset_url | stylesheet_tag }}
    {{ 'component-product-card.css' | asset_url | stylesheet_tag }}
    {{ 'component-research-panel.css' | asset_url | stylesheet_tag }}
    {{ 'component-variant-picker.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- if template.name == 'cart' -%}
    {{ 'template-cart.css' | asset_url | stylesheet_tag }}
    {{ 'component-loyalty-bar.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- if template == 'customers/account' or template == 'customers/login' or template == 'customers/register' -%}
    {{ 'template-account.css' | asset_url | stylesheet_tag }}
    {{ 'template-auth.css' | asset_url | stylesheet_tag }}
    {{ 'component-loyalty-bar.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- if template.name == 'collection' -%}
    {{ 'section-product-grid.css' | asset_url | stylesheet_tag }}
    {{ 'component-product-card.css' | asset_url | stylesheet_tag }}
    {{ 'component-research-panel.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- if template.name == 'search' -%}
    {{ 'section-product-grid.css' | asset_url | stylesheet_tag }}
    {{ 'component-product-card.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {{ 'section-header.css' | asset_url | stylesheet_tag }}
  {{ 'section-footer.css' | asset_url | stylesheet_tag }}

  <script>document.documentElement.classList.replace('no-js', 'js');</script>

  {{ content_for_header }}
</head>
<body class="template-{{ template.name | handle }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">

  <a href="#main-content" class="skip-to-content visually-hidden">{{ 'accessibility.skip_to_content' | t }}</a>

  {% section 'header' %}

  <main id="main-content" role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {{ 'global.js' | asset_url | script_tag }}

  {%- if template.name == 'index' or template.name == 'collection' -%}
    <script src="{{ 'product-card.js' | asset_url }}" defer></script>
  {%- endif -%}

  {%- if template.name == 'product' -%}
    <script src="{{ 'product-card.js' | asset_url }}" defer></script>
    <script src="{{ 'variant-picker.js' | asset_url }}" defer></script>
  {%- endif -%}

  {%- if template.name == 'cart' -%}
    <script src="{{ 'cart.js' | asset_url }}" defer></script>
    <script src="{{ 'loyalty-tracker.js' | asset_url }}" defer></script>
  {%- endif -%}

  {%- if template == 'customers/account' -%}
    <script src="{{ 'loyalty-tracker.js' | asset_url }}" defer></script>
  {%- endif -%}

  {%- if template.name == 'index' -%}
    <script src="{{ 'product-request-form.js' | asset_url }}" defer></script>
  {%- endif -%}
</body>
</html>
