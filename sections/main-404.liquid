<section class="not-found-page">
  <div class="container container--narrow">

    <div class="not-found-page__content">
      <h1 class="not-found-page__heading">{{ section.settings.heading }}</h1>
      <p class="not-found-page__description">{{ section.settings.description }}</p>
      <a href="{{ routes.root_url }}" class="btn btn--primary">
        {{ section.settings.button_text }}
      </a>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section-main-404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.main_404.settings.heading.label",
      "default": "Page Not Found"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.main_404.settings.description.label",
      "default": "Sorry, the page you're looking for doesn't exist."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.main_404.settings.button_text.label",
      "default": "Back to Home"
    }
  ]
}
{% endschema %}
