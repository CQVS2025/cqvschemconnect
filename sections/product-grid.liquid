{%- liquid
  assign collection_handle = section.settings.collection
  assign max_products = section.settings.max_products
  assign columns = section.settings.columns_desktop
  assign section_id = section.settings.section_id
  assign show_research = section.settings.show_research
  assign show_badges = section.settings.show_badges
  assign show_add_to_cart = section.settings.show_add_to_cart
-%}

<section
  class="product-grid"
  id="{{ section_id }}"
  data-section-id="{{ section.id }}"
  data-section-type="product-grid"
>
  <div class="product-grid__container container">
    {%- if section.settings.heading != blank -%}
      <h2 class="product-grid__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if collections[collection_handle].products.size > 0 -%}
      <div class="product-grid__grid product-grid__grid--{{ columns }}-col">
        {%- for product in collections[collection_handle].products limit: max_products -%}
          <div class="product-grid__item">
            {% render 'product-card',
              product: product,
              show_research: show_research,
              show_badges: show_badges,
              show_add_to_cart: show_add_to_cart
            %}
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="product-grid__empty">
        <p class="product-grid__empty-text">{{ 'sections.product_grid.no_products' | t | default: 'No products found. Please select a collection in the section settings.' }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .product-grid {
    background-color: var(--color-bg-dark, #0a0a0a);
    padding: 4rem 0;
  }

  .product-grid__container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .product-grid__heading {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    text-align: center;
    margin: 0 0 3rem;
  }

  @media (min-width: 768px) {
    .product-grid__heading {
      font-size: 2.5rem;
    }
  }

  .product-grid__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .product-grid__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .product-grid__grid--2-col {
      grid-template-columns: repeat(2, 1fr);
    }

    .product-grid__grid--3-col {
      grid-template-columns: repeat(3, 1fr);
    }

    .product-grid__grid--4-col {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .product-grid__item {
    display: flex;
  }

  .product-grid__empty {
    text-align: center;
    padding: 3rem;
    background-color: var(--color-bg-card, #141414);
    border: 1px dashed var(--color-border, rgba(255, 255, 255, 0.1));
    border-radius: 12px;
  }

  .product-grid__empty-text {
    color: var(--color-text-muted, #b0b0b0);
    font-size: 1rem;
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "Product Grid",
  "class": "section-product-grid",
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Products"
    },
    {
      "type": "text",
      "id": "section_id",
      "label": "Section anchor ID",
      "default": "products",
      "info": "Used for in-page navigation links (e.g. #products)"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Maximum products to show",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 20
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Desktop columns",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" },
        { "value": "4", "label": "4 columns" }
      ],
      "default": "3"
    },
    {
      "type": "checkbox",
      "id": "show_research",
      "label": "Show research links",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_add_to_cart",
      "label": "Show add to cart button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "settings": {
        "heading": "Products",
        "section_id": "products",
        "max_products": 20,
        "columns_desktop": "3",
        "show_research": true,
        "show_badges": true,
        "show_add_to_cart": true
      }
    }
  ]
}
{% endschema %}
