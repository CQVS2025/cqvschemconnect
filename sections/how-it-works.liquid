{%- liquid
  assign section_id = section.settings.section_id
-%}

<section
  class="how-it-works"
  id="{{ section_id }}"
  data-section-id="{{ section.id }}"
  data-section-type="how-it-works"
>
  <div class="how-it-works__container container">
    {%- if section.settings.heading != blank -%}
      <h2 class="how-it-works__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="how-it-works__steps">
        {%- for block in section.blocks -%}
          <div class="how-it-works__step" {{ block.shopify_attributes }}>
            <div class="how-it-works__step-indicator">
              <div class="how-it-works__number">
                {{ block.settings.number | default: forloop.index }}
              </div>
              {%- unless forloop.last -%}
                <div class="how-it-works__connector"></div>
              {%- endunless -%}
            </div>

            <div class="how-it-works__step-content">
              {%- if block.settings.title != blank -%}
                <h3 class="how-it-works__step-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="how-it-works__step-description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .how-it-works {
    background-color: var(--color-bg-dark, #0a0a0a);
    padding: 4rem 0;
  }

  .how-it-works__container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .how-it-works__heading {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    text-align: center;
    margin: 0 0 3rem;
  }

  @media (min-width: 768px) {
    .how-it-works__heading {
      font-size: 2.5rem;
    }
  }

  .how-it-works__steps {
    display: flex;
    flex-direction: column;
    gap: 0;
    max-width: 700px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .how-it-works__steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      max-width: 100%;
    }
  }

  .how-it-works__step {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem 0;
  }

  @media (min-width: 768px) {
    .how-it-works__step {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 0;
    }
  }

  .how-it-works__step-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
    position: relative;
  }

  @media (min-width: 768px) {
    .how-it-works__step-indicator {
      flex-direction: row;
      width: 100%;
      justify-content: center;
    }
  }

  .how-it-works__number {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: var(--color-accent, #00d4aa);
    color: var(--color-bg-dark, #0a0a0a);
    font-size: 1.25rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }

  /* Connector line between steps (mobile: vertical) */
  .how-it-works__connector {
    width: 2px;
    flex-grow: 1;
    min-height: 40px;
    background: linear-gradient(to bottom, var(--color-accent, #00d4aa), rgba(0, 212, 170, 0.2));
  }

  /* Connector line between steps (desktop: horizontal) */
  @media (min-width: 768px) {
    .how-it-works__connector {
      width: auto;
      height: 2px;
      min-height: unset;
      flex-grow: 1;
      background: linear-gradient(to right, var(--color-accent, #00d4aa), rgba(0, 212, 170, 0.2));
      position: absolute;
      left: calc(50% + 30px);
      top: 50%;
      transform: translateY(-50%);
      right: calc(-50% - 30px);
      min-width: unset;
    }
  }

  .how-it-works__step-content {
    padding-top: 0.25rem;
  }

  @media (min-width: 768px) {
    .how-it-works__step-content {
      padding-top: 1.25rem;
    }
  }

  .how-it-works__step-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 0.5rem;
  }

  .how-it-works__step-description {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-muted, #b0b0b0);
    margin: 0;
  }
</style>

