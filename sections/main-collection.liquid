<section class="collection-page">
  <div class="container">

    <div class="collection-page__header">
      <h1 class="collection-page__title">{{ collection.title | escape }}</h1>
      {%- if section.settings.show_description and collection.description != blank -%}
        <div class="collection-page__description rte">
          {{ collection.description }}
        </div>
      {%- endif -%}
    </div>

    {%- if collection.products.size > 0 -%}
      <div class="product-grid product-grid--3">
        {%- for product in collection.products -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- if paginate -%}
        {%- if paginate.pages > 1 -%}
          <nav class="collection-page__pagination" aria-label="{{ 'general.pagination.label' | t }}">
            {{ paginate | default_pagination }}
          </nav>
        {%- endif -%}
      {%- endif -%}
    {%- else -%}
      <p class="collection-page__empty">{{ 'collections.general.no_products' | t }}</p>
    {%- endif -%}

  </div>
</section>

{% schema %}
{
  "name": "Collection page",
  "tag": "section",
  "class": "section-main-collection",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "t:sections.main_collection.settings.show_description.label",
      "default": true
    }
  ]
}
{% endschema %}
